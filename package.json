{
  "name": "image-grabber",
  "version": "1.0.0",
  "description": "Grab images on the fly as you write",
  "scripts": {
    "clean": "rimraf dist",
    "watch": "webpack --config webpack/webpack.dev.js --watch",
    "dev-build": "webpack --config webpack/webpack.dev.js",
    "build": "webpack --config webpack/webpack.prod.js",
    "pack": "npm run clean && npm run build && bestzip prod.zip dist/*"
  },
  "author": "Haidar Ali",
  "repository": {
    "type": "git",
    "url": "https://github.com/exzish/medium-extension"
  },
  "dependencies": {
    "imagesloaded": "^4.1.4",
    "jquery": "^3.5.1",
    "masonry-layout": "^4.2.2",
    "unsplash-js": "^6.3.0"
  },
  "devDependencies": {
    "@types/chrome": "0.0.123",
    "@types/imagesloaded": "^4.1.2",
    "@types/jquery": "^3.5.1",
    "@types/masonry-layout": "^4.2.1",
    "@types/unsplash-js": "^6.0.1",
    "bestzip": "^2.1.7",
    "copy-webpack-plugin": "^6.1.1",
    "rimraf": "^3.0.2",
    "ts-loader": "^8.0.4",
    "typescript": "^4.0.3",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-copy-plugin": "0.0.4",
    "webpack-merge": "^4.2.2"
  }
}
